.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
    Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.app-header {
  text-align: center;
  margin-bottom: 2rem;
}

.app-header h1 {
  margin: 0;
  font-size: 2.5rem;
  color: #61dafb;
}

.app-header p {
  color: #666;
  font-size: 1.1rem;
}

.counter {
  display: flex;
  align-items: center;
  gap: 1rem;
  font-size: 1.5rem;
}

.counter button {
  padding: 0.5rem 1rem;
  font-size: 1.5rem;
  cursor: pointer;
  border: none;
  border-radius: 4px;
  background-color: #61dafb;
  color: #282c34;
  transition: background-color 0.2s;
}

.counter button:hover {
  background-color: #4fa8c7;
}

.counter span {
  min-width: 3rem;
  text-align: center;
}

footer {
  margin-top: 3rem;
  color: #888;
  font-size: 0.9rem;
}
