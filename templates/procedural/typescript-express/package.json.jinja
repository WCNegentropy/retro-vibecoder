{
  "name": "{{ projectName }}",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
{%- if isTypeScript %}
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
{%- else %}
    "dev": "node --watch src/index.mjs",
    "start": "node src/index.mjs",
    "test": "vitest",
    "lint": "eslint src/"
{%- endif %}
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
{%- if isTypeScript %}
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.0",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0"
{%- else %}
    "supertest": "^6.3.3",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0"
{%- endif %}
  }
}
