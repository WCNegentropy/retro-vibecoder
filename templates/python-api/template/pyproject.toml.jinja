[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
authors = [
    { name = "{{ author }}" }
]
readme = "README.md"
requires-python = ">={{ python_version }}"

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
asyncio_mode = "auto"

[tool.ruff]
target-version = "py{{ python_version | replace('.', '') }}"
line-length = 88

[tool.ruff.lint]
select = ["E", "F", "I", "UP"]

[tool.mypy]
python_version = "{{ python_version }}"
strict = true
ignore_missing_imports = true
