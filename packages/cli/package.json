{
  "name": "@wcnegentropy/cli",
  "version": "0.2.1",
  "description": "Command-line interface for the Universal Project Generator",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "upg": "./dist/bin/upg.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@wcnegentropy/core": "workspace:*",
    "@wcnegentropy/procedural": "workspace:*",
    "@wcnegentropy/shared": "workspace:*",
    "commander": "^11.1.0",
    "nunjucks": "^3.2.4",
    "ora": "^8.0.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/nunjucks": "^3.2.6",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "retro-vibecoder",
    "upg",
    "cli",
    "scaffolding",
    "project-generator",
    "procedural",
    "template",
    "code-generation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WCNegentropy/retro-vibecoder.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/WCNegentropy/retro-vibecoder#readme",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
