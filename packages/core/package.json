{
  "name": "@wcnegentropy/core",
  "version": "0.2.1",
  "description": "Core package for UPG manifest validation and transpilation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    },
    "./transpiler": {
      "types": "./dist/transpiler/index.d.ts",
      "import": "./dist/transpiler/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "src/schema/*.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run --passWithNoTests",
    "test:unit": "vitest run src/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@wcnegentropy/shared": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "retro-vibecoder",
    "upg",
    "core",
    "validation",
    "transpiler"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WCNegentropy/retro-vibecoder.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/WCNegentropy/retro-vibecoder#readme",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
