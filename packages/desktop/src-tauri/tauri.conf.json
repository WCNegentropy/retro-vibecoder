{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "UPG Desktop",
  "version": "0.1.0",
  "identifier": "com.wcnegentropy.upg",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Universal Project Generator",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/copier-cli"]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "binaries/copier-cli",
          "cmd": "binaries/copier-cli",
          "args": true
        }
      ]
    }
  }
}
